using UnityEngine;
using System.Collections;

public class scroll : MonoBehaviour
{
    void Start()
    {

    }

    void Update()
    {
        MeshRenderer mr = GetComponent<MeshRenderer>(); //Represents Mesh Renderer. Store this object in the veriable.

        Material mat = mr.materials[0]; // Get the first element of an array 'materials' in Mesh Renderer
        //Material mat = mr.material; - would access the first element of an array (sort of short cut)

        //mat.GetTextureOffset("_MainText"); -> main 'texture', most materials consist of only one.
        Vector2 offset = mat.mainTextureOffset;

        //offset.x += Time.time;
        offset.x += Time.deltaTime/8;

        mat.mainTextureOffset = offset;

    }
}
